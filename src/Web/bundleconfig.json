    // Optionally specify minification options
    "minify": {
      "enabled": true,
      "renameLocals": true
    },
    // Optionally generate .map file
    "sourceMap": false
  },
  {
    "outputFileName": "wwwroot/js/bundle/bundle.js",
    "inputFiles": [
      "wwwroot/js/*.js",
      "wwwroot/js/components/*.js",
      "wwwroot/js/components/shared/*.js"
    ],
    // Optionally specify minification options
    "minify": {
      "enabled": false,
      "renameLocals": false
    },
    // Optionally generate .map file
    "sourceMap": true
  }

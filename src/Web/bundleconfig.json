[
  {
    "outputFileName": "wwwroot/css/app.min.css",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "wwwroot/css/app.css"
    ]
  },
  {
    "outputFileName": "wwwroot/js/bundle/bundle.min.js",
